<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="235.0" prefWidth="382.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.EditDeadlineViewController">
    <children>
        <HBox prefHeight="18.0" prefWidth="600.0">
            <children>
                <TextField fx:id="taskID">
                    <HBox.margin>
                        <Insets left="10.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <Label text="Task ID">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <HBox prefHeight="18.0" prefWidth="600.0">
            <children>
                <TextField fx:id="currentDeadline">
                    <HBox.margin>
                        <Insets left="10.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <Label text="Current Deadline">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <HBox prefHeight="18.0" prefWidth="600.0">
            <children>
                <TextField fx:id="day" prefHeight="26.0" prefWidth="45.0" promptText="DD">
                    <HBox.margin>
                        <Insets left="10.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <TextField fx:id="month" prefHeight="26.0" prefWidth="45.0" promptText="MM">
                    <HBox.margin>
                        <Insets left="5.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <TextField fx:id="year" prefHeight="26.0" prefWidth="45.0" promptText="YYYY">
                    <HBox.margin>
                        <Insets left="5.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <Label text="New Deadline">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <Label fx:id="errorLabel" text="errorLabel" textFill="RED">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <HBox prefHeight="25.0" prefWidth="600.0">
            <children>
                <Button mnemonicParsing="false" onAction="#backButtonPressed" text="Back">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#submitButtonPressed" text="Submit">
                    <font>
                        <Font size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="30.0" />
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets left="10.0" />
    </padding>
</VBox>
